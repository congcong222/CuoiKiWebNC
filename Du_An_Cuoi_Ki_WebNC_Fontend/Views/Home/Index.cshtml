@*
*@
@{
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Quản lý Món ăn</title>
    </head>
    <style>
            body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        form {
            margin-top: 20px;
        }

        input, textarea {
            display: block;
            margin: 10px 0;
            padding: 8px;
            width: 100%;
        }
    </style>
    <body>
        <div class="container">
            <h1>Danh sách Món ăn</h1>
            <table id="menuTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên món</th>
                        <th>Đơn vị tính</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Mô tả</th>
                        <th>Hình ảnh</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

            <h2>Thêm Món ăn</h2>
            <form id="addMenuForm">
                <input type="text" id="tenMon" placeholder="Tên món" required>
                <input type="text" id="donViTinh" placeholder="Đơn vị tính" required>
                <input type="number" id="donGia" placeholder="Đơn giá" required>
                <input type="number" id="soLuong" placeholder="Số lượng" required>
                <textarea id="moTa" placeholder="Mô tả"></textarea>
                <input type="text" id="hinhAnh" placeholder="Hình ảnh URL">
                <button type="submit">Thêm</button>
            </form>
        </div>

        <script src="~/js/app.js"></script>
    </body>
    </html>
}
